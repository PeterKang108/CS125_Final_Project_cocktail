<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.peter.planb_for_final_project">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="android.app.searchable"
            android:resource="@xml/searchable" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Ingredient"
            android:label="@string/title_activity_ingredient"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".MainNameSearch" />
        <activity
            android:name=".Glass"
            android:label="@string/title_activity_glass"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Alcohol"
            android:label="@string/title_activity_alcohol"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Category"
            android:label="@string/title_activity_category"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".name_search_result"
            android:label="name-search_result"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".CategorySearch" />
        <activity android:name=".GlassSearch" />
        <activity android:name=".IngredientSearch" />
        <activity
            android:name=".NewGlassSearchResult"
            android:label="@string/title_activity_new_glass_search_result"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".NewCategorySearchResult"
            android:label="@string/title_activity_new_category_search_result"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
    </application>

</manifest>